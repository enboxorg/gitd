{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://enbox.org/schemas/forge/revision",
  "title": "RevisionData",
  "description": "A patch revision containing an optional description and diff statistics.",
  "type": "object",
  "properties": {
    "description": {
      "type": "string"
    },
    "diffStat": {
      "type": "object",
      "properties": {
        "additions": {
          "type": "number"
        },
        "deletions": {
          "type": "number"
        },
        "filesChanged": {
          "type": "number"
        }
      },
      "required": ["additions", "deletions", "filesChanged"],
      "additionalProperties": false
    }
  },
  "required": ["diffStat"],
  "additionalProperties": false
}
