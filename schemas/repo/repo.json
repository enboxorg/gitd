{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://enbox.org/schemas/forge/repo",
  "title": "RepoData",
  "description": "Repository metadata including name, description, default branch, and endpoints.",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "defaultBranch": {
      "type": "string"
    },
    "homepage": {
      "type": "string"
    },
    "dwnEndpoints": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "gitEndpoints": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "required": ["name", "defaultBranch", "dwnEndpoints"],
  "additionalProperties": false
}
